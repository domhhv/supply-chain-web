{
  "name": "supply-chain-web",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Vite + React + TypeScript web application for tracking supply chain data",
  "author": "Dominik Hryshaiev <domhryshaiev@gmail.com>",
  "homepage": "https://supply-chain-web-omega.vercel.app/",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/domhhv/supply-chain-web.git"
  },
  "keywords": [
    "vite",
    "react",
    "typescript",
    "tailwindcss",
    "eslint",
    "prettier",
    "husky",
    "lint-staged",
    "react-router",
    "framer-motion",
    "phosphor-icons",
    "heroui",
    "supply-chain",
    "trace-and-track"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prebuild": "yarn typecheck && yarn eslint:check && yarn prettier:check",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "typecheck",
      "lint",
      "prettier --check"
    ]
  },
  "dependencies": {
    "@heroui/button": "^2.2.13",
    "@heroui/card": "^2.2.13",
    "@heroui/input": "^2.4.13",
    "@heroui/progress": "^2.2.10",
    "@heroui/system": "^2.4.10",
    "@heroui/table": "^2.2.12",
    "@heroui/theme": "^2.4.9",
    "@phosphor-icons/react": "^2.1.7",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.7",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0",
    "tailwindcss": "^3.4.17",
    "type-fest": "^4.35.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0"
  }
}
